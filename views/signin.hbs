 <section class="login-section mt-30 mb-15">
    <div class="container" >
        <div class="sign-up flex">
            <div class="sign-up__page-info mt-20">
                <h2>Login</h2>
                <p>Get access to your Orders, Wishlist and Recommandations</p>
            </div>
            <div>
                <form action="#" autocomplete="off">
                    <fieldset>
                        <input id="email" type="email" name="email" required>
                        <label for="email">Email</label>
                        <div class="after"></div>
                    </fieldset>
                    <fieldset>
                        <input id="password" type="password" name="password" required>
                        <label for="password">Password</label>
                        <div class="after"></div>
                    </fieldset>
                    <fieldset>
                        <button>Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>