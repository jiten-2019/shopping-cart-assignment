<section class="cart-section " >
        <div class="container " >
            <div class="item-in-cart">
                <div class="my-cart">
                    <h4>My cart <span class="nav__end-cart--count"> {{cart.count}} items</span> </h4>
                </div>

                {{#each cart.items}}
                    <div class="my-cart items-details" data-id="">
                        <img src="{{product.imageURL}}" alt="{{product.name}}" width="80px">
                        <div class="details">
                            <h3>{{product.name}}</h3>
                            <div>
                            <a href="" class="add">&#45;</a>
                            <span class="quantity">{{count}}</span>
                            <a href="" class="add">+</a> * <span class="total-rs">Rs. {{product.price}}</span>
                            </div>
                        </div>
                        <span class="tot-rupee">Rs. {{multiply product.price count}} </span>
                    </div>
                {{/each}}

               <div class="my-cart items">
                    <img src="assets/images/lowest-price.png" alt="">
                    <span > You won't fint it cheeper anywahere</span> 
                </div>

            </div>

        </div>
    </section>

    <section class="promo-code" >
        <div class="container " >
            <p class="text-center">Promo code can be applied on payment page.</p>
            <button>Checkout to proceed <span>Rs. 187 ></span></button>   
        </div>
    </section>